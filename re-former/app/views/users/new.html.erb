	<!-- Rails Form with #form_for -->
	<%= form_for @user do |f| %>
		<ul>
			<% @user.errors.full_messages.each do |error| %>
				<li><%= error %></li>
			<% end %>
		</ul>
		<p>
			<%= f.label :username %> 
			<%= f.text_field :username %>
		</p>
		<p>
			<%= f.label :email %>
			<%= f.text_field :email, value: "example@example.com" %>
		</p>
		<p>
			<%= f.label :password %>
			<%= f.password_field :password %>
