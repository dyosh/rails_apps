<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>

	<h1>Edit User</h1>
	<%= form_for @user do |f| %>
		<ul>
			<% @user.errors.full_messages.each do |error| %>
				<li><%= error %></li>
			<% end %>
		</ul>
		<p>
			<%= f.label :username %> 
			<%= f.text_field :username, value: @user.username %>
		</p>
		<p>
			<%= f.label :email %>
			<%= f.text_field :email, value: @user.email %>
		</p>
		<p>
			<%= f.label :password %>
			<%= f.password_field :password %>
		</p>
		<%= f.submit "Submit" %>
	<% end %>

</body>
</html>